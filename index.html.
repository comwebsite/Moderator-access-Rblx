  <script>
    // Список всех полей для хранения
    const fields = [
      'modNick',
      'pestNick',
      'punishmentChoice',
      'period',
      'cause',
      'proof'
    ];

    document.addEventListener('DOMContentLoaded', () => {
      fields.forEach(id => {
        const inp = document.getElementById(id);
        // При загрузке подставляем сохранённое значение
        inp.value = localStorage.getItem(id) || '';
        // Сохраняем при каждом изменении
        inp.addEventListener('input', () => {
          localStorage.setItem(id, inp.value);
        });
      });
    });
  </script>
